<div class="formSignIn">
    <form class="modal-content animate" method="POST" action="/login" name="form">
        <div class="containerSignIn">

            <div class="form-group">
                <label><b>Username:*</b></label>
                <input type="text"
                       name="username"
                       placeholder="Username"
                       class="username"
                       required/>
            </div>
            <div class="form-group">
                <label><b>Password:*</b></label>
                <input type="password"
                       name="password"
                       placeholder="Password"
                       id="signUpPassword"
                       class="password"
                       required/>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-12 col-md-6 col-lg-5 col-sm-6">
                        <button class="button icon-login LoginSignIn"
                                type="submit">
                            <span>Sign In</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>